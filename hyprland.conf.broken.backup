# ~/.config/hypr/hyprland.conf
# Clean, Modular Hyprland Configuration
# Author: Mete | Rust 1.75 + GNU-Compatible
# Last Updated: 2025-05-30

# Prevent auto-generation
autogenerated = 0

# Import modular configurations
source = ~/.config/hypr/configs/environment.conf
source = ~/.config/hypr/configs/monitors.conf
source = ~/.config/hypr/configs/input.conf
source = ~/.config/hypr/configs/appearance.conf
source = ~/.config/hypr/configs/window-rules.conf
source = ~/.config/hypr/configs/keybinds.conf
source = ~/.config/hypr/configs/autostart.conf

# Main modifier key
$mainMod = SUPER
